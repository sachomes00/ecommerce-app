<div class="row">
  <div class="col-md-6">
    <div class="alert alert-success" role="alert">
      <h4 class="alert-heading"> Your order was successfully submitted!</h4>
      <hr>
      <p class="mb-0">Order Total: <%= number_to_currency(@order.total) %></p>
      <p class="mb-0">Charge ID: <%= @order.payment_intent_id %></p>
      <br />
      <p class="mb-0"><%= link_to 'Shop for more products', products_path %></p>
    </div>
  </div>
</div>
<div class="table">
  <table>
    <thead>
      <tr>
        <th scope="col">Product</th>
        <th scope="col">Price</th>
        <th scope="col">Quantity</th>
      </tr>
    </thead>
    <tbody>
      <% @order.line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.product.name %></td>
        <td><%= number_to_currency(line_item.product.price) %></td>
        <td><%= line_item.quantity %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
